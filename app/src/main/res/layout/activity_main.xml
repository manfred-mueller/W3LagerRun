<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.manfredmuellermuelheim.w3lager.MainActivity">

    <ImageButton
        android:id="@+id/browser_button"
        style="@android:style/Widget.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@null"
        android:clickable="true"
        android:focusable="true"
        android:onClick="browserClick"
        android:paddingBottom="45dp"
        android:contentDescription="@string/browser_button"
        android:src="@drawable/w3lager" />

    <TextView
        android:id="@+id/chromeVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ems="10"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:paddingTop="80dp"
        android:singleLine="true"
        android:textColor="@android:color/black" />

    <WebView
        android:id="@+id/infoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="20dp"
        android:visibility="gone" />

</RelativeLayout>